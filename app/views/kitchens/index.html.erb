<div class="container">
  <%= link_to "New kitchen", new_kitchen_path, class: "btn btn-flat" if policy(Kitchen).new? %>
</div>
<div class="container mt-4">
  <div class="row justify-content-center">
      <% @kitchens.each do |kitchen| %>
          <div class="card-product col-lg-4 mt-3">
            <%= cl_image_tag kitchen.photos.sample.key, height: 200, width: 300, crop: :fill %>
            <div class="card-product-infos">
              <h2><%= link_to kitchen.name, kitchen_path(kitchen) %></h2>
              <p><%= kitchen.features %></p>
              <div class="container mt-1">
                <div class="d-flex justify-content-start">
                  <i class="fa-sharp fa-solid fa-star" style="color: #f19c09;"> <%= kitchen.rating %> </i>
                </div>
                <div class="d-flex justify-content-end">
                  <i class="fa-solid fa-sack-dollar"> <%= kitchen.price %></i>
                </div>
              </div>
            </div>
          </div>
      <% end %>
  </div>
  <div data-controller='map'
    data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>"
    data-map-markers-value="<%= @markers.to_json %>"
    id="map" style='width: 400px; height: 300px;'>
  </div>

</div>
